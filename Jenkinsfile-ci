pipeline {
    agent any
    
    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }
        
        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }
        
        stage('Run Tests') {
            steps {
                sh 'npm test || true'
            }
        }
        
        stage('Build Application') {
            steps {
                sh 'npm run build'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t frontend-app:${GIT_BRANCH}-${BUILD_NUMBER} .'
            }
        }
        
        stage('Security Scan') {
            steps {
                sh 'docker scan frontend-app:${GIT_BRANCH}-${BUILD_NUMBER} || true'
            }
        }
    }
    
    post {
        always {
            sh 'echo "CI/CD Pipeline completed with status: ${currentBuild.result}"'
            publishHTML([
                allowMissing: false,
                alwaysLinkToLastBuild: true,
                keepAll: true,
                reportDir: 'coverage',
                reportFiles: 'index.html',
                reportName: 'Test Coverage Report'
            ])
        }
        success {
            sh 'echo "✅ CI/CD Pipeline Successful - Ready for deployment"'
        }
        failure {
            sh 'echo "❌ CI/CD Pipeline Failed"'
        }
    }
}